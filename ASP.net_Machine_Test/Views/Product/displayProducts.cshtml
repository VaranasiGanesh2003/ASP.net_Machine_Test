@model IEnumerable<ASP.net_Machine_Test.Models.Product>
@{
    ViewBag.Title = "displayProducts";
}
<style>
    body {
        background: linear-gradient(to right, #f8f9fa, #e3f2fd);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    table {
        width: 80%;
        margin: auto;
        border-collapse: collapse;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        border-radius: 12px;
        overflow: hidden;
        background-color: #ffffff;
    }

    th, td {
        padding: 15px;
        text-align: center;
    }

    th {
        background: linear-gradient(to right, #007bff, #00c6ff);
        color: white;
        font-size: 18px;
    }

    td {
        background-color: #f1f1f1;
        font-weight: 500;
    }

    tr:nth-child(even) td {
        background-color: #e7f1ff;
    }

    h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #343a40;
        text-shadow: 1px 1px 3px #bbb;
    }

    a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
    }

        a:hover {
            color: #0056b3;
            text-decoration: underline;
        }

    .action-links {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .add-link {
        display: inline-block;
        padding: 10px 20px;
        margin-top: 20px;
        background: linear-gradient(to right, #28a745, #7bed9f);
        color: white;
        border-radius: 20px;
        text-decoration: none;
        font-weight: bold;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
        transition: 0.3s;
    }

        .add-link:hover {
            background: linear-gradient(to right, #218838, #6dd3a7);
            transform: translateY(-2px);
        }
</style>
<h2>display Products</h2>
<table>
    <tr>
        <th>@Html.DisplayNameFor(c => c.productId)</th>
        <th>@Html.DisplayNameFor(c => c.productName)</th>
        <th>@Html.DisplayNameFor(c => c.categoryId)</th>
        <th>@Html.DisplayNameFor(c => c.category)</th>
        <th>Action</th>
    </tr>

    @foreach (var Products in Model)
    {
        <tr>
            <td>@Html.DisplayFor(c => Products.productId)</td>
            <td>@Html.DisplayFor(c => Products.productName)</td>
            <td>@Html.DisplayFor(c => Products.categoryId)</td>
            <td>@Html.DisplayFor(c => Products.category.categoryName)</td>
            <td>
                @Html.ActionLink("View", "displayProduct", new { id = Products.productId })
                @Html.ActionLink("Edit", "EditProduct", new { id = Products.productId })
                @Html.ActionLink("Delete", "DeleteProduct", new { id = Products.productId }, new { onclick = "return confirm('Are you sure of deleting the record?')" })
            </td>
        </tr>
    }
    <tr>
        <td colspan="9" align="center" style="align-items:center">
            @Html.ActionLink("Add New Product", "AddProduct")
        </td>
    </tr>
</table>

   

